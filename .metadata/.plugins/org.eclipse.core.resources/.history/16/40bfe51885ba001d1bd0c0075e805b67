	}


	JFrame frame;
	JLabel label;
	
	
	public MenuPage() {
		
		//JLabel Zone
		ImageIcon logo = new ImageIcon("D:\\Project Picture\\CoffeeLogoResize.jpg");
		ImageIcon hotCoffee=new ImageIcon("D:\\Project Picture\\HotCoffee.png");
